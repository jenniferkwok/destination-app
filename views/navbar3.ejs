  <script>
    $(function(){
      $("#page-wrap").wrapInner("<table cellspacing='30'><tr>");
      $(".post").wrap("<td></td>");
      $("body").mousewheel(function(event, delta) {
        this.scrollLeft -= (delta * 20);
        event.preventDefault();
      });   
    });
  </script>
  <title>NEXT STOP</title>
</head>
<body>
  <header role="banner">
    <!--NAVBAR-->
    <nav class="navbar navbar-default navbar-fixed-top main-nav" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <!--  -->
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/"><img src="/nextstop-bg-01.png" width="100"></a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <!-- <ul class="nav navbar-nav"> LEFT SIDE ITEMS </ul> -->
        <ul class="nav navbar-nav navbar-right cl-effect-14 main-nav">
          <% if (user) { %> 
          <li><a href="#" type="submit" id="submit" data-toggle="modal" data-target="#myModal">Add New</a></li>
          <li><a href="/profile"><%= user.firstname %> <%= user.lastname %></a></li>
          <li><a id="logout" href="/logout" >Logout</a></li> 
          <% } else { %>
          <li><a class="cd-signin" href="#0">Login</a></li>
          <li><a class="cd-signup" href="#0">Signup</a></li>
          <% } %>

          <!-- ADD NEW -->
<!-- Modal -->
  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
<!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Share your picture!</h4>
        </div>

              <div id="cd-newpost">
                <form class="cd-form" id="newpost">
                  <p class="fieldset">
                    <label for="imgurl">Image URL</label>
                    <input class="full-width has-padding" type="text" placeholder="Image URL" name="imgurl">
                  </p>

                  <p class="fieldset">
                    <label for="signin-password">Location</label>
                    <input class="full-width has-padding" type="text"  placeholder="Where in the world is it?" name="location">

<input type="hidden" name="author" value="<%=user.firstname%> <%=user.lastname%>" class="required">
                  </p>
                  <p class="fieldset">
                    <input type="submit" class="full-width" value="SUBMIT">
                  </p>
                </form>
              </div>
      </div>
    </div>
  </div>
          <!-- NEW MODAL & FORMS -->

          <div class="cd-user-modal"> <!-- this is the entire modal form, including the background -->
            <div class="cd-user-modal-container"> <!-- this is the container wrapper -->
              <ul class="cd-switcher">
                <li><a href="#0">Sign in</a></li>
                <li><a href="#0">New account</a></li>
              </ul>

              <div id="cd-login"> <!-- log in form -->
                <form class="cd-form" id="login">
                  <p class="fieldset">
                    <label for="signin-email">E-mail</label>
                    <input class="full-width has-padding" id="signin-email" type="email" placeholder="E-mail" name="email">
                  </p>

                  <p class="fieldset">
                    <label for="signin-password">Password</label>
                    <input class="full-width has-padding" id="signin-password" type="password"  placeholder="Password" name="password">
                  </p>

                  <p class="fieldset">
                    <input class="full-width" type="submit" value="Login">
                  </p>
                </form>

              </div> <!-- cd-login -->

              <div id="cd-signup"> <!-- sign up form -->
                <form class="cd-form" id="signup">
                  <p class="fieldset">
                    <label for="signup-email">E-mail</label>
                    <input class="full-width has-padding" id="signup-email" type="email" placeholder="E-mail" name="email">
                  </p>

                  <p class="fieldset">
                    <label for="signup-firstname">Your Name</label>
                    <input class="full-width has-padding" id="signup-firstname" type="text"  placeholder="Firstname" name="firstname">

                    <input class="full-width has-padding" id="signup-lastname" type="text"  placeholder="Lastname" name="lastname">
                  </p>

                  <p class="fieldset">
                    <label for="signup-password">Password</label>
                    <input class="full-width has-padding" id="signup-password" type="password"  placeholder="Password" name="password">
                  </p>


                  <p class="fieldset">
                    <input id="submitsignup" class="full-width has-padding" type="button" value="Create account">
                  </p>
                </form>
              </div> <!-- cd-signup -->
            </div> <!-- cd-user-modal-container -->
          </div> <!-- cd-user-modal -->

          <!-- END OF MODALS -->
        </ul>
      </div>
    </nav>
  </header>
