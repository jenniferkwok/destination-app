<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- FONTS -->
  <link href='https://fonts.googleapis.com/css?family=Cabin' rel='stylesheet' type='text/css'>
  <!-- LOGIN FORM -->
  <link rel="stylesheet" type="text/css" href="/vendor/loginformreset.css">
  <link rel="stylesheet" type="text/css" href="/vendor/loginformstyle.css">

  <!-- STYLESHEETS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <!-- BUTTONS -->
  <link rel="stylesheet" href="http://unicorn-ui.com/buttons/css/buttons.css">
  <!-- NAV -->
  <link rel="stylesheet" type="text/css" href="/vendor/component.css">

  <link rel="stylesheet" href="styles.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <!-- SKROLLR -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/skrollr/0.6.30/skrollr.min.js"></script>
  <!-- VALIDATION -->
  <script src="http://cdn.jsdelivr.net/jquery.validation/1.14.0/jquery.validate.js"></script>
  <!-- MAPS -->
  <script src="http://maps.googleapis.com/maps/api/js?v=3&amp;libraries=places"></script>
  <!-- MOUSEWHEEL -->
  <script src="/vendor/jquery.mousewheel.js"></script>
  <script src="/vendor/modernizr.js"></script>

  <!-- STELLAR -->
  <!-- <script src="https://raw.githubusercontent.com/markdalgleish/stellar.js/master/jquery.stellar.js"></script> -->
  <script>
    $(function(){
      $("#page-wrap").wrapInner("<table cellspacing='30'><tr>");
      $(".post").wrap("<td></td>");
      $("body").mousewheel(function(event, delta) {
        this.scrollLeft -= (delta * 20);
        event.preventDefault();
      });   
    });
  </script>
  <script src="scripts.js"></script>
  <title>NEXT STOP</title>
</head>
<body>
  <header role="banner">
    <!--NAVBAR-->
    <nav class="navbar navbar-default navbar-fixed-top main-nav" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <!--  -->
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">NEXT STOP</a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <!-- <ul class="nav navbar-nav"> LEFT SIDE ITEMS </ul> -->
        <ul class="nav navbar-nav navbar-right cl-effect-14 main-nav">
          <% if (currentUser) { %> 
          <li><a href="#">Add New</a></li>
          <li><a href="/profile"><%= currentUser.firstname %> <%= currentUser.lastname %></a></li>
          <li><a id="logout" href="/logout" >Logout</a></li> 
          <% } else { %>
          <li><a class="cd-signin" href="#0">Login</a></li>
          <li><a class="cd-signup" href="#0">Signup</a></li>
          <% } %>
          <!-- NEW MODAL & FORMS -->

          <div class="cd-user-modal"> <!-- this is the entire modal form, including the background -->
            <div class="cd-user-modal-container"> <!-- this is the container wrapper -->
              <ul class="cd-switcher">
                <li><a href="#0">Sign in</a></li>
                <li><a href="#0">New account</a></li>
              </ul>

              <div id="cd-login"> <!-- log in form -->
                <form class="cd-form" id="login">
                  <p class="fieldset">
                    <label for="signin-email">E-mail</label>
                    <input class="full-width has-padding" id="signin-email" type="email" placeholder="E-mail" name="email">
                  </p>

                  <p class="fieldset">
                    <label for="signin-password">Password</label>
                    <input class="full-width has-padding" id="signin-password" type="password"  placeholder="Password" name="password">
                  </p>

                  <p class="fieldset">
                    <input class="full-width" type="submit" value="Login">
                  </p>
                </form>

              </div> <!-- cd-login -->

              <div id="cd-signup"> <!-- sign up form -->
                <form class="cd-form" id="signup">
                  <p class="fieldset">
                    <label for="signup-email">E-mail</label>
                    <input class="full-width has-padding" id="signup-email" type="email" placeholder="E-mail" name="email">
                  </p>

                  <p class="fieldset">
                    <label for="signup-firstname">firstname</label>
                    <input class="full-width has-padding" id="signup-firstname" type="text"  placeholder="Firstname" name="firstname">
                  </p>

                  <p class="fieldset">
                    <label for="signup-lastname">lastname</label>
                    <input class="full-width has-padding" id="signup-lastname" type="text"  placeholder="Lastname" name="lastname">
                  </p>

                  <p class="fieldset">
                    <label for="signup-password">Password</label>
                    <input class="full-width has-padding" id="signup-password" type="password"  placeholder="Password" name="password">
                  </p>

                  <p class="fieldset">
                    <input id="submitsignup" class="full-width has-padding" type="submit" value="Create account">
                  </p>
                </form>
              </div> <!-- cd-signup -->
            </div> <!-- cd-user-modal-container -->
          </div> <!-- cd-user-modal -->

          <!-- END OF MODALS -->
        </ul>
      </div>
    </nav>
  </header>

  <!-- DB CONTENT -->
  <div id="page-wrap container"> 
  <% if (currentUser == null) { %>
<div class="splash"><h2>Log in and see where these places are!</h2></div>
<% } %>
<div class="post"><section class="postsection" data-stellar-background-ratio="0.5">
 Instructions: Scroll! Discover places! Click "I want to go" to see where it is! And save to your bucket List!
</section></div>
    <% for (var i=posts.length-1; i>=0; i--){ %>

    <!-- <article class="post"> -->
    <div class="post" >
      <section class="postsection" id="toppost" style="background-image: url(<%= posts[i].imgurl %>)" data-stellar-background-ratio="0.5">
        <% if (currentUser) { %> 

        <span class="wanttogo">
          <div data-id="<%=posts[i].id %>" class="button button-large button-plain button-border" id="want">I WANT TO GO TO <%= posts[i].location %> </div>
          <!-- <div data-id="<%=posts[i].id %>" class="box bar" id="want">I WANT TO GO TO <%= posts[i].location %> </div> -->

          <h5>by <%= posts[i].author %></h5>
        </span> <% } %>

        
        
        <button data-id="<%=posts[i].id %>" type="button" class="deletebutton">&times;</button><br>
      </section></div>
      <!-- </article> -->
      <% } %>
    </div>

    <!-- SKROLLR -->
    <script type="text/javascript">
      var s = skrollr.init();
    </script>

    <!-- VALIDATE -->

    <script>

      $('form').validate();
    </script>
<script src="/vendor/loginformmain.js"></script>
</body>


</html>
